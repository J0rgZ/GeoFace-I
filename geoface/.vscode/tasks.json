{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Flutter: Clean",
      "type": "shell",
      "command": "flutter clean",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Get Dependencies",
      "type": "shell",
      "command": "flutter pub get",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Clean & Get",
      "type": "shell",
      "command": "flutter clean && flutter pub get",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Upgrade Dependencies",
      "type": "shell",
      "command": "flutter pub upgrade",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Run Tests",
      "type": "shell",
      "command": "flutter test",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Flutter: Run Tests with Coverage",
      "type": "shell",
      "command": "flutter test --coverage",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Flutter: Generate Test Report",
      "type": "shell",
      "command": "dart test/generate_test_report.dart",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Flutter: Generate Acceptance Report",
      "type": "shell",
      "command": "dart test/generate_acceptance_report.dart",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Flutter: Analyze",
      "type": "shell",
      "command": "flutter analyze",
      "problemMatcher": [
        "$dart-analyze"
      ],
      "group": "test"
    },
    {
      "label": "Flutter: Format",
      "type": "shell",
      "command": "dart format lib/ test/",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Build APK (Debug)",
      "type": "shell",
      "command": "flutter build apk --debug",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Build APK (Release)",
      "type": "shell",
      "command": "flutter build apk --release",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Build App Bundle",
      "type": "shell",
      "command": "flutter build appbundle --release",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Run (Development)",
      "type": "shell",
      "command": "flutter run --flavor development",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Run (Production)",
      "type": "shell",
      "command": "flutter run --flavor production --release",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Flutter: Doctor",
      "type": "shell",
      "command": "flutter doctor -v",
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "Android: Clean Gradle",
      "type": "shell",
      "command": "cd android && .\\gradlew clean",
      "windows": {
        "command": "cd android && .\\gradlew.bat clean"
      },
      "problemMatcher": [],
      "group": "build"
    }
